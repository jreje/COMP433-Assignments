<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    >

    <!-- Drawing Area -->
    <com.example.cw3.DrawingArea
        android:id="@+id/drawingArea"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tags Label and Input -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tagsLabel"
            android:text="Tags:"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="30dp"
            />

        <EditText
            android:id="@+id/tagsInput"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="Enter tag" />
    </LinearLayout>


    <!-- Clear and Save Buttons -->
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearButton"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="clear"
            android:text="Clear"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#F44336"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="save"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="16dp" />
    </LinearLayout>

    <!-- Find Label and Input -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:gravity="center"
            android:id="@+id/findLabel"
            android:text="Find:"
            android:onClick="find"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            />

        <EditText
            android:id="@+id/findInput"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="Enter tag" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/drawing1"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="#DDDDDD"
            android:layout_margin="5dp"
            />
        <TextView
            android:text=""
            android:id="@+id/drawing1Text"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/drawing2"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="#DDDDDD"
            android:layout_margin="5dp"
            />
        <TextView
            android:text=""
            android:id="@+id/drawing2Text"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/drawing3"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:background="#DDDDDD"
            android:layout_margin="5dp"
            />
        <TextView
            android:text=""
            android:id="@+id/drawing3Text"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_margin="5dp"/>
    </LinearLayout>

</LinearLayout>
