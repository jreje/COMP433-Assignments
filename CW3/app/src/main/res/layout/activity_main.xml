<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <!-- Drawing Area -->
    <com.example.cw3.DrawingArea
        android:id="@+id/drawingArea"
        android:layout_width="0dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tags Label and Input -->
    <TextView
        android:id="@+id/tagsLabel"
        android:text="Tags:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/drawingArea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="16dp" />

    <EditText
        android:id="@+id/tagsInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@id/tagsLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/tagsLabel"
        android:hint="Enter tag" />

    <!-- Clear and Save Buttons -->
    <com.google.android.material.button.MaterialButton
        android:onClick="clear"
        android:id="@+id/clearButton"
        android:text="Clear"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="#F44336"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/tagsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/saveButton"
        app:layout_constraintWidth_percent="0.48"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/saveButton"
        android:text="Save"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        app:backgroundTint="#4CAF50"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toTopOf="@id/clearButton"
        app:layout_constraintStart_toEndOf="@id/clearButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.48"
        android:layout_width="0dp"
        android:layout_height="60dp" />

    <!-- Find Label and Input -->
    <TextView
        android:id="@+id/findLabel"
        android:text="Find:"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/clearButton"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/findInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Search tag"
        app:layout_constraintStart_toEndOf="@id/findLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/findLabel" />

</androidx.constraintlayout.widget.ConstraintLayout>
