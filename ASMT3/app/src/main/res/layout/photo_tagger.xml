<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoTagger"
    android:padding="16dp"
    android:orientation="vertical"
    android:gravity="center"
    >

    <!-- Drawing Area -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Tags Label and Input -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tagsLabel"
            android:text="Tags:"
            android:onClick="annotateImage"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="60dp"
            />

        <EditText
            android:id="@+id/tagsInput"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="Enter tag" />
    </LinearLayout>


    <!-- Camera and Save Buttons -->
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cameraButton"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="startCameraIntent"
            android:text="Camera"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#F44336"
            app:cornerRadius="16dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:onClick="save"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="16dp" />
    </LinearLayout>

    <!-- Find Label and Input -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <Button
            android:gravity="center"
            android:id="@+id/findLabel"
            android:text="Find:"
            android:onClick="find"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_margin="5dp"
            />

        <EditText
            android:id="@+id/findInput"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:inputType="text"
            android:hint="Enter tag" />
    </LinearLayout>

    <ListView
        android:id="@+id/galleryListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="1dp"
        android:padding="8dp"
        android:scrollbars="vertical"/>

</LinearLayout>
